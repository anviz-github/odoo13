<?xml version="1.0" ?>
<odoo>
    <record id="module_device_category" model="ir.module.category">
        <field name="name">Device</field>
    </record>
     <!-- Device User Group -->
    <record id="device_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_device_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- Device Manager Group -->
    <record id="device_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_device_category" />
        <field name="implied_ids" eval="[(4, ref('device_group_user'))]" />
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
    </record>
    <record id="server_group_user" model="res.groups">
        <field name="name">Server User</field>
        <field name="category_id" ref="module_device_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- Device Manager Group -->
    <record id="server_group_manager" model="res.groups">
        <field name="name">Server Manager</field>
        <field name="category_id" ref="module_device_category" />
        <field name="implied_ids" eval="[(4, ref('server_group_user'))]" />
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
    </record>

</odoo>