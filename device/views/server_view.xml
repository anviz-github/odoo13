<?xml version="1.0"?>
<odoo>
    <record id="view_form_server" model="ir.ui.view">
        <field name="name">Server Form</field>
        <field name="model">device.server</field>
        <field name="arch" type="xml">
            <form string="Server">
                <group>
                    <field name="name" />
                    <field name="server_id"  />
                     <field name="platform"  />
                    <field name="server_quota" />
                    <field name="active" />
                    <field name="version"/>
                    <!--field name="device_id" widget="many2many_tags" /-->
                </group>
            </form>
        </field>
    </record>
    <record id="view_tree_server" model="ir.ui.view">
        <field name="name">Server List</field>
        <field name="model">device.server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="server_id"  />
                 <field name="platform"  />
                <field name="server_quota" />
                <field name="active" />
                <field name="version"/>
                <!--field name="device_id" widget="many2many_tags" /-->
            </tree>
        </field>
    </record>
    <record id="view_search_server" model="ir.ui.view">
        <field name="name">Server Filters</field>
        <field name="model">device.server</field>
        <field name="arch" type="xml">
            <search>
                <field name="device_id" />
                <field name="server_id" />
                <filter name="filter_active"
                    string="Active"
                    domain="[('active','=',True)]" />
               <filter name="filter_inactive"
                    string="Inactive"
                    domain="[('active','=',False)]" />
            </search>
        </field>
    </record>
</odoo>